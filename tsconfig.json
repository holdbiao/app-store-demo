{
  "include": [
    "./**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "outDir": "./dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es2015", "es2016", "dom", "es2018.promise"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true, // 是否启用对装饰器的实验性支持，装饰器是一种语言特性，还没有完全被 JavaScript 规范批准
    "moduleResolution": "Node", // 指定模块解析策略
  }
}
